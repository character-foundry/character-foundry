{
  "name": "@character-foundry/lorebook",
  "version": "0.0.4",
  "description": "Lorebook parsing, extraction, and insertion utilities",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@character-foundry/core": "workspace:^",
    "@character-foundry/schemas": "workspace:^"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/character-foundry/character-foundry",
    "directory": "packages/lorebook"
  },
  "private": true
}
