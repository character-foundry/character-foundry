{
  "name": "@character-foundry/normalizer",
  "version": "0.1.5",
  "description": "Character card normalization - convert between CCv2, CCv3, and NormalizedCard formats",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@character-foundry/core": "workspace:^",
    "@character-foundry/schemas": "workspace:^"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "character-card",
    "tavern",
    "chara",
    "normalizer",
    "converter"
  ],
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "module": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/character-foundry/character-foundry",
    "directory": "packages/normalizer"
  }
}
