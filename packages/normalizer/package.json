{
  "name": "@character-foundry/normalizer",
  "version": "0.1.0",
  "description": "Character card normalization - convert between CCv2, CCv3, and NormalizedCard formats",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@character-foundry/core": "workspace:*",
    "@character-foundry/schemas": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "character-card",
    "tavern",
    "chara",
    "normalizer",
    "converter"
  ],
  "license": "MIT"
}
