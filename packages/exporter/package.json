{
  "name": "@character-foundry/exporter",
  "version": "0.1.5",
  "description": "Universal character card exporter - export to PNG, CharX, or Voxta formats",
  "type": "module",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@character-foundry/charx": "workspace:^",
    "@character-foundry/core": "workspace:^",
    "@character-foundry/png": "workspace:^",
    "@character-foundry/schemas": "workspace:^",
    "@character-foundry/voxta": "workspace:^"
  },
  "devDependencies": {
    "fflate": "^0.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "character-card",
    "tavern",
    "chara",
    "png",
    "charx",
    "voxta",
    "exporter"
  ],
  "license": "MIT",
  "module": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/character-foundry/character-foundry",
    "directory": "packages/exporter"
  },
  "private": true
}
