{
  "name": "character-foundry",
  "version": "0.0.1",
  "private": true,
  "description": "Shared primitives for AI character card handling",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/character-foundry/character-foundry.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "@character-foundry/schemas": "workspace:^"
    }
  },
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "verify-build": "node scripts/verify-build.js",
    "check-deps": "node scripts/check-published-deps.js",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && pnpm run publish:packages",
    "publish:packages": "cd packages/character-foundry && pnpm publish --no-git-checks --provenance && cd ../cli && pnpm publish --no-git-checks --provenance"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.0",
    "@types/node": "^20.10.0",
    "dts-bundle-generator": "^9.5.1",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
